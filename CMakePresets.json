{
    "version": 3,
    "configurePresets": [
        {
            "name": "conf-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "environment": {
                "CPM_SOURCE_CACHE": "${sourceDir}/.cpm_source_cache"
            }
        },
        {
            "name": "windows-base",
            "inherits": "conf-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-msvc-debug",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-msvc-release",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "linux-base",
            "inherits": "conf-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "vendor": {
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "linux-gcc-debug",
            "inherits": "linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-gcc-release",
            "inherits": "linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-windows-msvc-debug",
            "configurePreset": "windows-msvc-debug"
        },
        {
            "name": "build-windows-msvc-release",
            "configurePreset": "windows-msvc-release"
        },
        {
            "name": "build-linux-gcc-debug",
            "configurePreset": "linux-gcc-debug"
        },
        {
            "name": "build-linux-gcc-release",
            "configurePreset": "linux-gcc-release"
        }
    ],
    "testPresets": [
        {
            "name": "test-common",
            "description": "Test CMake settings that apply to all configurations",
            "hidden": true,
            "output": {
                "outputOnFailure": true,
                "verbosity": "verbose"
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "test-windows-msvc-debug",
            "configurePreset": "windows-msvc-debug",
            "inherits": "test-common"
        },
        {
            "name": "test-windows-msvc-release",
            "configurePreset": "windows-msvc-release",
            "inherits": "test-common"
        },
        {
            "name": "test-linux-gcc-debug",
            "configurePreset": "linux-gcc-debug",
            "inherits": "test-common"
        },
        {
            "name": "test-linux-gcc-release",
            "configurePreset": "linux-gcc-release",
            "inherits": "test-common"
        }
    ]
}
